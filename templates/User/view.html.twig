{% extends "index.html.twig" %}
{% block title %} - Profile {% endblock %}


{% block body %}
    <div class="container-fluid mt-2">
        <h2 class="display-3">Votre Profile</h2>
        <hr class="my-4">
        <div class="row">
            <div class="card col-lg-4 ml" style="width: 15rem;">

                <div class="card-body">
                    <h5 class="card-title">{{ User.UNom + User.UPrenom }}</h5>
                    <p class="card-text">{{ User.Age }}</p>
                    <p class="card-text">{{ User.Sexe }}</p>
                </div>
            </div>
        </div>
    </div>


{% endblock %}