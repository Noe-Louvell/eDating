{% extends "index.html.twig" %}
{% block title %}{{ parent() }} - Mise à jour d'un User {% endblock %}


{% block body %}
    <div class="container-fluid mt-2">
        <h2 class="display-3">Mise à jour d'un User</h2>
        <hr class="my-4">
        <div class="row">

            <form name="updateArticle" method="post" class="col-lg-8" enctype="multipart/form-data">

                <div class="form-group row">
                    <label for="Nom" class="col-sm-2 col-form-label">Nom</label>
                    <div class="col-sm-10">
                        <input type="text" name="Nom" class="form-control form-control-lg" value="{{ User.UNom }}" >
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Prenom" class="col-sm-2 col-form-label">Prenom</label>
                    <div class="col-sm-10">
                        <textarea name="Prenom" class="form-control" rows="7">{{ User.UPrenom | nl2br }}</textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">email</label>
                    <div class="col-sm-10">
                        <textarea name="email" class="form-control" rows="7">{{ User.Email  }}</textarea>
                    </div>
                </div>


                <input type="submit" class="btn btn-primary my-1">
            </form>
        </div>


    </div>
    </div>

{% endblock %}